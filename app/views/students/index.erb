<h2>Listado de Estudiantes</h2>

<table border="1px">
  <thead >
    <tr>
      <th>id</th>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Fecha de Nacimiento</th>
      <th>Programa</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student|%>
    <tr>
      <td><%= student.id %></td>
      <td><%= student.nombre %></td>
      <td><%= student.correo%></td>
      <td><%= student.fecha %></td>
      <td><%= student.programa %></td>
      <td><a href="/students/<%= student.id %>">Mostrar</a></td>
      <td><a href="/students/edit">Editar</a></td>
      <td>
        <form action="/students/<%=student.id %>"method="post">
          <input name="_method" type="hidden" value="delete"/>
          <input type="submit" value="Eliminar"/>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<a href="/students/new">crear Estudiante</a>
